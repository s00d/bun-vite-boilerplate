{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["dist", "node_modules", ".output", ".cache", "coverage", "build", "*.log"]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120,
    "bracketSpacing": true
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": ["src/client/env.d.ts", "generate-doc.cjs"],
    "rules": {
      "recommended": true,
      "style": {
        "useShorthandFunctionType": "warn",
        "noUselessElse": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off"
      }
    }
  }
}
